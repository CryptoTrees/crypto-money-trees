strongerGreen = #0b860b
strongGreen = #0ca90c
lightGreen = #4bdd4b
lighterGreen = #74ed74

button
    background-color: lightGreen
    border: 1px solid strongGreen
    color: white
    border-radius: 10px
    padding: 10px
    margin: 1%
    box-sizing: border-box
    cursor: pointer

    &:hover
        background-color: lighterGreen
        border: 1px solid lightGreen

    &:active
        background-color: strongerGreen
        border: 1px solid strongGreen

    &:disabled
        background-color: lighterGreen
        border: 1px solid lightGreen
        cursor: default

.spacer
    height: 400px
    width: 100%

.navbar
    box-shadow: 0 0 20px -5px grey

.tree-container
    padding: 30px
    margin-top: 0.5%
    box-shadow: 0 0 10px -2px #808080
    margin-left: 0.5%
    border-radius: 15px

.tree-image
    width: 100%

.wide-button
    width: 48%

.full-button
    width: 98%

.hidden
    display: none

.margin-auto
    margin: 40px auto

.check-rewards-button
    margin-top: 1.5%

.word-wrap
    word-wrap: break-word

.col-6
    -webkit-box-flex: 0
    -ms-flex: 0 0 49%
    flex: 0 0 49%
    max-width: 49%

@media (min-width: 576px)
    .col-sm-4
        -ms-flex: 0 0 32.8333333%
        flex: 0 0 32.8333333%
        max-width: 32.8333333%
